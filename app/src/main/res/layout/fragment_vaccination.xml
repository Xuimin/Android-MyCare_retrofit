<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.fragment.VaccinationFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/space_5"
                app:cardMaxElevation="@dimen/space_5"
                app:cardCornerRadius="@dimen/space_5"
                android:layout_marginStart="@dimen/space_16"
                android:layout_marginEnd="@dimen/space_16"
                android:layout_marginTop="@dimen/space_10">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/space_10">

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/name"
                        android:textSize="@dimen/space_10"
                        android:layout_marginStart="@dimen/space_10"
                        android:layout_marginTop="@dimen/space_5" />

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/username"
                        android:textColor="@color/black"
                        android:textAllCaps="true"
                        android:layout_marginStart="@dimen/space_10" />

                    <TextView
                        android:id="@+id/tv_ic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/ic"
                        android:textSize="@dimen/space_10"
                        android:layout_marginStart="@dimen/space_10"
                        android:layout_marginTop="@dimen/space_5" />

                    <TextView
                        android:id="@+id/tv_user_ic"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_ic"
                        android:textColor="@color/black"
                        android:textAllCaps="true"
                        android:layout_marginStart="@dimen/space_10" />

                    <TextView
                        android:id="@+id/tv_user_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/user_status"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:background="@color/on_primary"
                        android:padding="@dimen/space_10"
                        android:paddingStart="@dimen/space_20"
                        android:paddingEnd="@dimen/space_20"
                        android:layout_marginTop="@dimen/space_10"
                        android:layout_marginStart="@dimen/space_10" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/v_dose1"
                        android:layout_width="@dimen/space_30"
                        android:layout_height="@dimen/space_20"
                        android:layout_marginStart="@dimen/space_20"
                        android:layout_marginTop="@dimen/space_100"
                        android:checked="true" />

                    <View
                        android:id="@+id/v_line_stepper"
                        android:layout_width="@dimen/stepper_width"
                        android:layout_height="@dimen/stepper_height"
                        android:layout_below="@id/v_dose1"
                        android:layout_marginStart="@dimen/space_35"
                        android:background="@color/primary" />

                    <RadioButton
                        android:id="@+id/v_dose2"
                        android:layout_below="@id/v_line_stepper"
                        android:layout_width="@dimen/space_30"
                        android:layout_height="@dimen/space_20"
                        android:layout_marginStart="@dimen/space_20"
                        android:checked="true" />

                    <View
                        android:id="@+id/v_line_stepper2"
                        android:layout_width="@dimen/stepper_width"
                        android:layout_height="@dimen/stepper_height"
                        android:layout_below="@id/v_dose2"
                        android:layout_marginStart="@dimen/space_35"
                        android:background="@color/primary" />

                    <RadioButton
                        android:id="@+id/v_dose3"
                        android:layout_width="@dimen/space_30"
                        android:layout_height="@dimen/space_20"
                        android:layout_below="@id/v_line_stepper2"
                        android:layout_marginStart="@dimen/space_20"
                        android:buttonTint="@color/primary"
                        android:clickable="false" />

                    <View
                        android:id="@+id/v_line_stepper3"
                        android:layout_width="@dimen/stepper_width"
                        android:layout_height="@dimen/stepper_height2"
                        android:layout_below="@id/v_dose3"
                        android:background="@color/primary"
                        android:layout_marginStart="@dimen/space_35" />

                    <RadioButton
                        android:id="@+id/v_status"
                        android:layout_width="@dimen/space_30"
                        android:layout_height="@dimen/space_20"
                        android:layout_below="@id/v_line_stepper3"
                        android:buttonTint="@color/primary"
                        android:layout_marginBottom="@dimen/space_100"
                        android:layout_marginStart="@dimen/space_20"
                        android:clickable="false" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/space_10">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="@dimen/space_5"
                        app:cardMaxElevation="@dimen/space_5"
                        app:cardCornerRadius="@dimen/space_5"
                        android:layout_marginStart="@dimen/space_16"
                        android:layout_marginEnd="@dimen/space_16"
                        android:layout_marginTop="@dimen/space_30">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/space_10">

                            <TextView
                                android:id="@+id/tv_time1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/date"
                                android:textSize="@dimen/space_10"
                                android:layout_marginStart="@dimen/space_10"
                                android:layout_marginTop="@dimen/space_5" />

                            <TextView
                                android:id="@+id/tv_dose1_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/date_dose1"
                                android:textColor="@color/black"
                                android:layout_marginStart="@dimen/space_10" />

                            <TextView
                                android:id="@+id/tv_date1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/time"
                                android:textSize="@dimen/space_10"
                                android:layout_marginStart="@dimen/space_10"
                                android:layout_marginTop="@dimen/space_5" />

                            <TextView
                                android:id="@+id/tv_dose1_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/time_dose1"
                                android:textColor="@color/black"
                                android:layout_marginStart="@dimen/space_10" />

                            <TextView
                                android:id="@+id/tv_type1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/type"
                                android:textSize="@dimen/space_10"
                                android:layout_marginStart="@dimen/space_10"
                                android:layout_marginTop="@dimen/space_5" />

                            <TextView
                                android:id="@+id/tv_dose1_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/type_dose1_one"
                                android:textColor="@color/black"
                                android:layout_marginStart="@dimen/space_10" />

                            <TextView
                                android:id="@+id/tv_location1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/location"
                                android:textSize="@dimen/space_10"
                                android:layout_marginStart="@dimen/space_10"
                                android:layout_marginTop="@dimen/space_5" />

                            <TextView
                                android:id="@+id/tv_dose1_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/location_dose1"
                                android:textColor="@color/black"
                                android:layout_marginStart="@dimen/space_10" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="@dimen/space_5"
                        app:cardMaxElevation="@dimen/space_5"
                        app:cardCornerRadius="@dimen/space_5"
                        android:layout_marginStart="@dimen/space_16"
                        android:layout_marginEnd="@dimen/space_16"
                        android:layout_marginTop="@dimen/space_30">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/space_10">

                            <TextView
                                android:id="@+id/tv_time2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/date"
                                android:textSize="@dimen/space_10"
                                android:layout_marginStart="@dimen/space_10"
                                android:layout_marginTop="@dimen/space_5" />

                            <TextView
                                android:id="@+id/tv_dose2_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/date_dose2"
                                android:textColor="@color/black"
                                android:layout_marginStart="@dimen/space_10" />

                            <TextView
                                android:id="@+id/tv_date2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/time"
                                android:textSize="@dimen/space_10"
                                android:layout_marginStart="@dimen/space_10"
                                android:layout_marginTop="@dimen/space_5" />

                            <TextView
                                android:id="@+id/tv_dose2_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/time_dose2"
                                android:textColor="@color/black"
                                android:layout_marginStart="@dimen/space_10" />

                            <TextView
                                android:id="@+id/tv_type2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/type"
                                android:textSize="@dimen/space_10"
                                android:layout_marginStart="@dimen/space_10"
                                android:layout_marginTop="@dimen/space_5" />

                            <TextView
                                android:id="@+id/tv_dose2_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/type_dose2_two"
                                android:textColor="@color/black"
                                android:layout_marginStart="@dimen/space_10" />

                            <TextView
                                android:id="@+id/tv_location2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/location"
                                android:textSize="@dimen/space_10"
                                android:layout_marginStart="@dimen/space_10"
                                android:layout_marginTop="@dimen/space_5" />

                            <TextView
                                android:id="@+id/tv_dose2_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/location_dose2"
                                android:textColor="@color/black"
                                android:layout_marginStart="@dimen/space_10" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="@dimen/space_5"
                        app:cardMaxElevation="@dimen/space_5"
                        app:cardCornerRadius="@dimen/space_5"
                        android:layout_marginStart="@dimen/space_16"
                        android:layout_marginEnd="@dimen/space_16"
                        android:layout_marginTop="@dimen/space_30">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/space_10">

                            <TextView
                                android:id="@+id/tv_time3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/date"
                                android:textSize="@dimen/space_10"
                                android:layout_marginStart="@dimen/space_10"
                                android:layout_marginTop="@dimen/space_5" />

                            <TextView
                                android:id="@+id/tv_dose3_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/date_time_booster"
                                android:textColor="@color/black"
                                android:layout_marginStart="@dimen/space_10" />

                            <TextView
                                android:id="@+id/tv_date3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/time"
                                android:textSize="@dimen/space_10"
                                android:layout_marginStart="@dimen/space_10"
                                android:layout_marginTop="@dimen/space_5" />

                            <TextView
                                android:id="@+id/tv_dose3_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/date_time_booster"
                                android:textColor="@color/black"
                                android:layout_marginStart="@dimen/space_10" />

                            <TextView
                                android:id="@+id/tv_type3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/type"
                                android:textSize="@dimen/space_10"
                                android:layout_marginStart="@dimen/space_10"
                                android:layout_marginTop="@dimen/space_5" />

                            <TextView
                                android:id="@+id/tv_dose3_type"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/type_booster"
                                android:textColor="@color/black"
                                android:layout_marginStart="@dimen/space_10" />

                            <TextView
                                android:id="@+id/tv_location3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/location"
                                android:textSize="@dimen/space_10"
                                android:layout_marginStart="@dimen/space_10"
                                android:layout_marginTop="@dimen/space_5" />

                            <TextView
                                android:id="@+id/tv_dose3_location"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/location_booster"
                                android:textColor="@color/black"
                                android:layout_marginStart="@dimen/space_10" />

                            <TextView
                                android:id="@+id/tv_make_appointment"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/make_appointment"
                                android:textSize="@dimen/font_10"
                                android:textColor="@color/primary"
                                android:textAlignment="textEnd"
                                android:onClick="makeAppointment"
                                android:drawableEnd="@drawable/ic_next"
                                android:layout_marginTop="@dimen/space_10" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardElevation="@dimen/space_5"
                        app:cardMaxElevation="@dimen/space_5"
                        app:cardCornerRadius="@dimen/space_5"
                        android:layout_marginStart="@dimen/space_16"
                        android:layout_marginEnd="@dimen/space_16"
                        android:layout_marginTop="@dimen/space_30"
                        android:layout_marginBottom="@dimen/space_70">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/user_status"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:padding="@dimen/space_10" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</layout>
