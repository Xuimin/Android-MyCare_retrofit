<!--        android:id="@+id/tv_place_location"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:layout_below="@id/tv_location"-->
<!--        android:layout_marginStart="@dimen/space_50"-->
<!--        android:layout_marginEnd="@dimen/space_50"-->
<!--        android:text="@string/fs_address"-->
<!--        android:textColor="@color/black" />-->

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_place_name"
        android:text="@string/date"
        android:textSize="@dimen/space_10"
        android:layout_marginStart="@dimen/space_20"
        android:layout_marginTop="@dimen/space_10" />

    <TextView
        android:id="@+id/tv_checkin_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_date"
        android:text="@string/checkin_date"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/space_20" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_checkin_date"
        android:text="@string/time"
        android:textSize="@dimen/space_10"
        android:layout_marginStart="@dimen/space_20"
        android:layout_marginTop="@dimen/space_10" />

    <TextView
        android:id="@+id/tv_checkin_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_time"
        android:text="@string/checkin_time"
        android:textColor="@color/black"
        android:layout_marginStart="@dimen/space_20" />
</RelativeLayout>

